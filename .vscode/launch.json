{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Streamlit Debug",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.venv/Lib/site-packages/streamlit/web/cli.py",
      "args": [
        "run",
        "${file}",
        "--server.port=8501",
        "--server.headless=true"
      ],
      "justMyCode": true
    }
  ]
}
